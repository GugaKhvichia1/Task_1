<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/display"
    android:padding="16dp"
    android:layout_marginTop="100dp"
    tools:context=".DisplayInfoActivity"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:contentDescription="display_message_image"
        android:src="@drawable/baseline_mark_email_read_24"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/userEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="10dp"
        tools:ignore="HardcodedText"
        android:background="@drawable/text_view_styles"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/recipientEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/text_view_styles"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp"
        tools:ignore="HardcodedText,TextViewEdits"
        android:background="@drawable/text_view_styles"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="4"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        tools:ignore="HardcodedText"
        android:background="@drawable/button_color_style"/>
</LinearLayout>
